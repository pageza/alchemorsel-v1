# cursor--Added .env.ci to supply required environment variables for CI testing

# The application listens on all interfaces.
HOST=0.0.0.0
PORT=8080

# JWT secret used for signing tokens.
JWT_SECRET=testsecret

# Database configuration for the application.
DB_DRIVER=postgres
# Construct DB_SOURCE to point to the CI Postgres container.
DB_SOURCE=host=ci_postgres port=5432 user=postgres password=ci_password dbname=ci_recipesdb sslmode=disable

# Additional Postgres environment variables used by the app.
POSTGRES_HOST=ci_postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=ci_password
POSTGRES_DB=ci_recipesdb

# Redis configuration for CI (assuming a service container is available at localhost)
REDIS_HOST=localhost
REDIS_PORT=6379

# External API configurations for CI testing (keys not required)
LLM_ENDPOINT=https://api.deepseek.com/chat/completions
DEEPSEEK_MODEL=deepseek-chat 